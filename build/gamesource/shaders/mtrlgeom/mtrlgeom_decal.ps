#include <../struct.h>
#include <../mtrl.h>

//##########################################################################

sampler2D g_sColor:register(s0);

//##########################################################################

half4 g_vNearFarLayers;

//##########################################################################

half4 main(VSO_SceneCommon IN) : COLOR0
{
	ClipFar(IN.vPos.z,g_vNearFarLayers.y);
	half4 vColor = tex2D(g_sColor,IN.vTexUV);
	clip(vColor.a - 0.5);
	return vColor;
}