#include <struct.h>
#include <mtrl.h>

//##########################################################################

//! цвет света
half4 g_vParam;	
half4 g_vNearFarLayers;

//##########################################################################

PSO_Gbuffer main(VSO_SceneCommon IN)
{
	ClipFar(IN.vPos.z,g_vNearFarLayers.y);
	return CreateGbuffer(g_vParam, normalize(IN.vNormal), half4(0.0, 0.0, 0.0, 1.0), IN.vPos, g_vNearFarLayers);
}